<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/forgotscreen_rounded_bg"
    android:fitsSystemWindows="true"
    tools:context=".beforeAuth.fragments.productFragment.productDetails.ProductDetailsBottomSheet">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/titleName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:text="Title"
            android:textColor="@color/purple"
            android:textSize="@dimen/_16sdp"
            app:fontFamily="@font/muli_black" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/moreDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            app:cardBackgroundColor="@color/light_purple"
            app:cardCornerRadius="@dimen/_5sdp"
            app:rippleColor="@color/purple"
            app:strokeColor="@color/purple"
            app:strokeWidth="@dimen/_2sdp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/muli_black"
                android:padding="@dimen/_8sdp"
                android:text="More Details"
                android:textAlignment="center"
                android:textColor="@color/purple" />
        </com.google.android.material.card.MaterialCardView>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_2sdp"
            android:layout_below="@id/moreDetails"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:background="@color/black" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view"
            android:background="@color/white"
            android:fadingEdge="vertical"
            android:fadingEdgeLength="@dimen/_10sdp"
            android:requiresFadingEdge="vertical"
            android:scrollbarSize="0dp"
            android:scrollbars="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/name"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:hint="Name"
                    android:textColorHint="@color/purple"
                    android:theme="@style/TextInputLayoutAppearance"
                    app:boxCornerRadiusBottomEnd="@dimen/_5sdp"
                    app:boxCornerRadiusBottomStart="@dimen/_5sdp"
                    app:boxCornerRadiusTopEnd="@dimen/_5sdp"
                    app:boxCornerRadiusTopStart="@dimen/_5sdp"
                    app:boxStrokeColor="@color/purple"
                    app:boxStrokeErrorColor="@color/errorColor"
                    app:boxStrokeWidthFocused="@dimen/_2sdp"
                    app:counterMaxLength="16"
                    app:endIconMode="clear_text"
                    app:endIconTint="@color/purple"
                    app:errorIconTint="@color/errorColor"
                    app:errorTextColor="@color/errorColor"
                    app:hintTextColor="@color/purple"
                    app:startIconDrawable="@drawable/ic_user"
                    app:startIconTint="@color/purple">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/muli_semibold"
                        android:inputType="textPersonName"
                        android:textColor="@color/black" />


                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/contactNum"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:hint="Contact Number"
                    android:textColorHint="@color/purple"
                    android:theme="@style/TextInputLayoutAppearance"
                    app:boxCornerRadiusBottomEnd="@dimen/_5sdp"
                    app:boxCornerRadiusBottomStart="@dimen/_5sdp"
                    app:boxCornerRadiusTopEnd="@dimen/_5sdp"
                    app:boxCornerRadiusTopStart="@dimen/_5sdp"
                    app:boxStrokeColor="@color/purple"
                    app:boxStrokeErrorColor="@color/errorColor"
                    app:boxStrokeWidthFocused="@dimen/_2sdp"
                    app:counterMaxLength="16"
                    app:endIconMode="clear_text"
                    app:endIconTint="@color/purple"
                    app:errorIconTint="@color/errorColor"
                    app:errorTextColor="@color/errorColor"
                    app:hintTextColor="@color/purple"
                    app:startIconDrawable="@drawable/ic_contact"
                    app:startIconTint="@color/purple">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/muli_semibold"
                        android:inputType="number"
                        android:maxLength="16"
                        android:textColor="@color/black" />


                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/emailAddress"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:hint="Email Address"
                    android:textColorHint="@color/purple"
                    android:theme="@style/TextInputLayoutAppearance"
                    app:boxCornerRadiusBottomEnd="@dimen/_5sdp"
                    app:boxCornerRadiusBottomStart="@dimen/_5sdp"
                    app:boxCornerRadiusTopEnd="@dimen/_5sdp"
                    app:boxCornerRadiusTopStart="@dimen/_5sdp"
                    app:boxStrokeColor="@color/purple"
                    app:boxStrokeErrorColor="@color/errorColor"
                    app:boxStrokeWidthFocused="@dimen/_2sdp"
                    app:counterMaxLength="16"
                    app:endIconMode="clear_text"
                    app:endIconTint="@color/purple"
                    app:errorIconTint="@color/errorColor"
                    app:errorTextColor="@color/errorColor"
                    app:hintTextColor="@color/purple"
                    app:startIconDrawable="@drawable/ic_email"
                    app:startIconTint="@color/purple">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/muli_semibold"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/black" />


                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/cnicNumber"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:hint="CNIC Number"
                    android:textColorHint="@color/purple"
                    android:theme="@style/TextInputLayoutAppearance"
                    app:boxCornerRadiusBottomEnd="@dimen/_5sdp"
                    app:boxCornerRadiusBottomStart="@dimen/_5sdp"
                    app:boxCornerRadiusTopEnd="@dimen/_5sdp"
                    app:boxCornerRadiusTopStart="@dimen/_5sdp"
                    app:boxStrokeColor="@color/purple"
                    app:boxStrokeErrorColor="@color/errorColor"
                    app:boxStrokeWidthFocused="@dimen/_2sdp"
                    app:counterMaxLength="16"
                    app:endIconMode="clear_text"
                    app:endIconTint="@color/purple"
                    app:errorIconTint="@color/errorColor"
                    app:errorTextColor="@color/errorColor"
                    app:hintTextColor="@color/purple"
                    app:startIconDrawable="@drawable/ic_cnic_id"
                    app:startIconTint="@color/purple">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/muli_semibold"
                        android:inputType="number"
                        android:maxLength="13"
                        android:textColor="@color/black" />


                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/city"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:hint="City"
                    android:textColorHint="@color/purple"
                    android:theme="@style/TextInputLayoutAppearance"
                    app:boxCornerRadiusBottomEnd="@dimen/_5sdp"
                    app:boxCornerRadiusBottomStart="@dimen/_5sdp"
                    app:boxCornerRadiusTopEnd="@dimen/_5sdp"
                    app:boxCornerRadiusTopStart="@dimen/_5sdp"
                    app:boxStrokeColor="@color/purple"
                    app:boxStrokeErrorColor="@color/errorColor"
                    app:boxStrokeWidthFocused="@dimen/_2sdp"
                    app:counterMaxLength="16"
                    app:endIconMode="clear_text"
                    app:endIconTint="@color/purple"
                    app:errorIconTint="@color/errorColor"
                    app:errorTextColor="@color/errorColor"
                    app:hintTextColor="@color/purple"
                    app:startIconDrawable="@drawable/ic_city_home"
                    app:startIconTint="@color/purple">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/muli_semibold"
                        android:inputType="text"
                        android:maxLength="13"
                        android:textColor="@color/black" />


                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/additionalComments"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:hint="Additional Commments"
                    android:textColorHint="@color/purple"
                    android:theme="@style/TextInputLayoutAppearance"
                    app:boxCornerRadiusBottomEnd="@dimen/_5sdp"
                    app:boxCornerRadiusBottomStart="@dimen/_5sdp"
                    app:boxCornerRadiusTopEnd="@dimen/_5sdp"
                    app:boxCornerRadiusTopStart="@dimen/_5sdp"
                    app:boxStrokeColor="@color/purple"
                    app:boxStrokeErrorColor="@color/errorColor"
                    app:boxStrokeWidthFocused="@dimen/_2sdp"
                    app:endIconMode="clear_text"
                    app:endIconTint="@color/purple"
                    app:errorIconTint="@color/errorColor"
                    app:errorTextColor="@color/errorColor"
                    app:hintTextColor="@color/purple"
                    app:startIconDrawable="@drawable/ic_comments"
                    app:startIconTint="@color/purple">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/muli_semibold"
                        android:inputType="text"
                        android:textColor="@color/black" />


                </com.google.android.material.textfield.TextInputLayout>


                <Button
                    android:id="@+id/agreeAndContinue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_60sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:backgroundTint="@color/purple"
                    android:elevation="@dimen/_8sdp"
                    android:fontFamily="@font/muli_black"
                    android:padding="@dimen/_12sdp"
                    android:text="submit"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp" />

            </LinearLayout>
        </ScrollView>
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>