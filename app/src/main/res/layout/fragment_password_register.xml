<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fadingEdge="vertical"
    android:fadingEdgeLength="@dimen/_10sdp"
    android:requiresFadingEdge="vertical"
    android:scrollbarSize="0dp"
    android:scrollbars="vertical"
    tools:context=".beforeAuth.fragments.registration.pagerFragments.PasswordRegisterFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/Username"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:hint="Username"
            android:textColorHint="@color/purple"
            android:theme="@style/TextInputLayoutAppearance"
            app:boxCornerRadiusBottomEnd="@dimen/_5sdp"
            app:boxCornerRadiusBottomStart="@dimen/_5sdp"
            app:boxCornerRadiusTopEnd="@dimen/_5sdp"
            app:boxCornerRadiusTopStart="@dimen/_5sdp"
            app:boxStrokeColor="@color/purple"
            app:boxStrokeErrorColor="@color/errorColor"
            app:boxStrokeWidthFocused="@dimen/_2sdp"
            app:counterMaxLength="16"
            app:endIconMode="clear_text"
            app:endIconTint="@color/purple"
            app:errorIconTint="@color/errorColor"
            app:errorTextColor="@color/errorColor"
            app:hintTextColor="@color/purple"
            app:startIconDrawable="@drawable/ic_user"
            app:startIconTint="@color/purple">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/muli_semibold"
                android:inputType="textPersonName"
                android:maxLength="16"
                android:textColor="@color/black" />


        </com.google.android.material.textfield.TextInputLayout>


        <TextView
            android:id="@+id/forgotUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Username"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/muli_black"
            android:foreground="?attr/selectableItemBackground"
            android:text="Username must be Alphanumeric, minimum username length should be 8 characters with a maximum length of 16 characters."
            android:textColor="@color/black"
            android:textSize="@dimen/_8sdp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/password"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/forgotUsername"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:hint="Password"
            android:textColorHint="@color/purple"
            android:theme="@style/TextInputLayoutAppearance"
            app:boxCornerRadiusBottomEnd="@dimen/_5sdp"
            app:boxCornerRadiusBottomStart="@dimen/_5sdp"
            app:boxCornerRadiusTopEnd="@dimen/_5sdp"
            app:boxCornerRadiusTopStart="@dimen/_5sdp"
            app:boxStrokeColor="@color/purple"
            app:boxStrokeErrorColor="@color/errorColor"
            app:boxStrokeWidthFocused="@dimen/_2sdp"
            app:endIconMode="password_toggle"
            app:endIconTint="@color/purple"
            app:errorIconTint="@color/errorColor"
            app:errorTextColor="@color/errorColor"
            app:hintTextColor="@color/purple"
            app:startIconDrawable="@drawable/ic_lock"
            app:startIconTint="@color/purple">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/pass"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/muli_semibold"
                android:inputType="textPassword"
                android:maxLength="16"
                android:textColor="@color/black" />


        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/pinPlaceholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/password"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/muli_black"
            android:foreground="?attr/selectableItemBackground"
            android:text="Password must be Alphanumeric\nMinimum password length should be 8 characters with a maximum length of 16 characters\nSpecial characters are not allowed"
            android:textColor="@color/black"
            android:textSize="@dimen/_8sdp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_10sdp"
                android:clickable="true"
                android:layout_gravity="center_vertical"
                android:focusable="true"
                android:text="Password Strength:"
                android:fontFamily="@font/muli_black"
                android:foreground="?attr/selectableItemBackground"
                android:textColor="@color/black"
                android:textSize="@dimen/_8sdp" />

            <nu.aaro.gustav.passwordstrengthmeter.PasswordStrengthMeter
                android:id="@+id/passwordInputMeter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_100sdp"
                app:animateChanges="true"
                android:layout_gravity="center_vertical"
                app:animationDuration="300"
                app:labelTextSize="12sp"
                app:showStrengthBar="true"
                app:showStrengthLabel="true"
                app:strengthBarHeight="5dp" />

        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/cnicUser"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:hint="Re-Password"
            android:textColorHint="@color/purple"
            android:theme="@style/TextInputLayoutAppearance"
            app:boxCornerRadiusBottomEnd="@dimen/_5sdp"
            app:boxCornerRadiusBottomStart="@dimen/_5sdp"
            app:boxCornerRadiusTopEnd="@dimen/_5sdp"
            app:boxCornerRadiusTopStart="@dimen/_5sdp"
            app:boxStrokeColor="@color/purple"
            app:boxStrokeErrorColor="@color/errorColor"
            app:boxStrokeWidthFocused="@dimen/_2sdp"
            app:counterMaxLength="16"
            app:endIconMode="password_toggle"
            app:endIconTint="@color/purple"
            app:errorIconTint="@color/errorColor"
            app:errorTextColor="@color/errorColor"
            app:hintTextColor="@color/purple"
            app:startIconDrawable="@drawable/ic_lock"
            app:startIconTint="@color/purple">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/muli_semibold"
                android:inputType="textPassword"
                android:maxLength="14"
                android:textColor="@color/black" />


        </com.google.android.material.textfield.TextInputLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/muli_black"
            android:foreground="?attr/selectableItemBackground"
            android:text="Changing password in  every 3 months is advisable"
            android:textColor="@color/black"
            android:textSize="@dimen/_8sdp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/accountNumber"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:hint="Passcode"
            android:textColorHint="@color/purple"
            android:theme="@style/TextInputLayoutAppearance"
            app:boxCornerRadiusBottomEnd="@dimen/_5sdp"
            app:boxCornerRadiusBottomStart="@dimen/_5sdp"
            app:boxCornerRadiusTopEnd="@dimen/_5sdp"
            app:boxCornerRadiusTopStart="@dimen/_5sdp"
            app:boxStrokeColor="@color/purple"
            app:boxStrokeErrorColor="@color/errorColor"
            app:boxStrokeWidthFocused="@dimen/_2sdp"
            app:counterMaxLength="16"
            app:endIconMode="password_toggle"
            app:endIconTint="@color/purple"
            app:errorIconTint="@color/errorColor"
            app:errorTextColor="@color/errorColor"
            app:hintTextColor="@color/purple"
            app:startIconDrawable="@drawable/ic_password"
            app:startIconTint="@color/purple">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/muli_semibold"
                android:inputType="numberPassword"
                android:maxLength="4"
                android:textColor="@color/black" />


        </com.google.android.material.textfield.TextInputLayout>


        <TextView
            android:id="@+id/countdownTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/muli_black"
            android:foreground="?attr/selectableItemBackground"
            android:text="00:00"
            android:textColor="@color/red"
            android:textSize="@dimen/_8sdp" />

        <TextView
            android:id="@+id/detailAndNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_15sdp"
            android:fontFamily="@font/muli"
            android:includeFontPadding="false"
            android:text="@string/passcode_has_been_sent"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/_9sdp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_30sdp"
            android:layout_marginEnd="@dimen/_30sdp"
            android:weightSum="4">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="2"
                app:cardBackgroundColor="@color/light_purple"
                android:layout_marginEnd="@dimen/_10sdp"
                app:cardCornerRadius="@dimen/_5sdp"
                app:strokeColor="@color/purple"
                app:strokeWidth="@dimen/_2sdp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/muli_black"
                    android:padding="@dimen/_8sdp"
                    android:text="Generate OTP"
                    android:textAlignment="center"
                    android:textColor="@color/purple" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="2"
                android:layout_marginStart="@dimen/_10sdp"
                app:cardBackgroundColor="@color/light_purple"
                app:cardCornerRadius="@dimen/_5sdp"
                app:strokeColor="@color/purple"
                app:strokeWidth="@dimen/_2sdp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/muli_black"
                    android:padding="@dimen/_8sdp"
                    android:text="Generate SMS"
                    android:textAlignment="center"
                    android:textColor="@color/purple" />
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <Button
            android:id="@+id/nextScreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_50sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginEnd="@dimen/_50sdp"
            android:backgroundTint="@color/purple"
            android:elevation="@dimen/_8sdp"
            android:fontFamily="@font/muli_black"
            android:padding="@dimen/_12sdp"
            android:text="next"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp" />
    </LinearLayout>

</ScrollView>