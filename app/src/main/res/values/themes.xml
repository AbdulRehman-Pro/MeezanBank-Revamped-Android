<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MeezanBank" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">false</item>
        <item name="colorNavigationItem">@color/menu_item_color_state</item>
        <item name="colorNavigationItemSelected">@color/white</item>
        <item name="drawableNavigationItemBackground">@drawable/menu_background_color_state</item>

    </style>

    <style name="RegistrationStyle" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>

    </style>

    <style name="FullScreen" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="o_mr1">shortEdges
        </item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="Widget.Custom.NavigationView" parent="Widget.Design.NavigationView">
        <item name="itemIconTint">?attr/colorNavigationItem</item>
        <item name="itemTextColor">?attr/colorNavigationItem</item>
        <item name="itemBackground">?attr/drawableNavigationItemBackground</item>
    </style>

    <style name="titleTextAppearence">
        <item name="android:fontFamily">@font/muli_black</item>
        <item name="android:textSize">@dimen/_18sdp</item>
    </style>

    <style name="TextInputLayoutAppearance" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="colorControlActivated">@color/purple</item>
        <item name="mtrl_textinput_default_box_stroke_color">@color/black</item>
    </style>

    <style name="bottomSheetStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize|stateVisible</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/forgotscreen_rounded_bg</item>
    </style>

    <!--You can change the parent class according to your needs-->
    <style name="CustomChipStyle" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_background_color_selector</item>
        <item name="chipStrokeColor">@color/chip_stroke_color_selector</item>
        <item name="android:textColor">@color/chip_text_color_selector</item>
        <item name="chipStrokeWidth">@dimen/_2sdp</item>
    </style>
    <style name="chipTextAppearence">
        <item name="android:fontFamily">@font/muli_black</item>
        <item name="android:textSize">@dimen/_10sdp</item>
    </style>
    <style name="DialogAnim">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

</resources>